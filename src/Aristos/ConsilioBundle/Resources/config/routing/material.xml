<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="material" pattern="/">
        <default key="_controller">AristosConsilioBundle:Material:index</default>
    </route>

    <route id="material_show" pattern="/{id}/show">
        <default key="_controller">AristosConsilioBundle:Material:show</default>
    </route>

    <route id="material_new" pattern="/new">
        <default key="_controller">AristosConsilioBundle:Material:new</default>
    </route>

    <route id="material_create" pattern="/create">
        <default key="_controller">AristosConsilioBundle:Material:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="material_edit" pattern="/{id}/edit">
        <default key="_controller">AristosConsilioBundle:Material:edit</default>
    </route>

    <route id="material_update" pattern="/{id}/update">
        <default key="_controller">AristosConsilioBundle:Material:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="material_delete" pattern="/{id}/delete">
        <default key="_controller">AristosConsilioBundle:Material:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
